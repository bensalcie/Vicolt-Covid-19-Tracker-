<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/nav_view"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/menu_one"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/globeic"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:textSize="13sp"

                android:textStyle="bold"
                android:layout_gravity="center"
                android:id="@+id/tvAnalysis"
                android:textColor="@color/colorWhite"
                android:text="Global" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/menu_two"

            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/homeic"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/tvControls"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:text="My Country" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:id="@+id/menu_three"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/countryic"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_height="40dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:id="@+id/tvInsights"
                android:layout_gravity="center"
                android:textColor="@color/colorWhite"
                android:text="Countries" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/nav_host_fragment"
        android:layout_width="match_parent"
        android:layout_above="@id/nav_view"
        android:layout_height="match_parent"
        />



</RelativeLayout>